{
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "lib": [
            "es2018"
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "pretty": true,
        "module": "commonjs",
        "target": "es2018"
    }
}
